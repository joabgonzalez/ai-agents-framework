{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Frontmatter Schema",
  "description": "JSON Schema for validating skill frontmatter in SKILL.md files",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "Skill identifier (lowercase with hyphens only)"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "pattern": ".*Trigger:.*",
      "description": "Precise description including 'Trigger:' clause for when AI should invoke"
    },
    "compatibility": {
      "type": "string",
      "description": "Optional: Compatibility info (e.g., universal, nodejs, browser)"
    },
    "license": {
      "type": "string",
      "description": "Optional: License info (e.g., MIT, Apache-2.0)"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$",
          "description": "Semantic version (major.minor or major.minor.patch format, e.g., '1.0' or '1.0.0'). Start at 1.0 for new skills."
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
          },
          "uniqueItems": true,
          "description": "Optional: List of internal skill dependencies"
        },
        "allowed-tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Optional: Tools agent can use with this skill"
        },
        "dependencies": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9@/-]+$": {
              "type": "string",
              "pattern": "^(\\^|~|>=|>|<|<=|\\*|[0-9]+(\\.[0-9]+){0,2})",
              "description": "Version range for external library (e.g., ^1.0.0, ~2.3.4, >=1.0, 1.0.0)"
            }
          },
          "additionalProperties": false,
          "description": "Optional: External libraries with version ranges"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

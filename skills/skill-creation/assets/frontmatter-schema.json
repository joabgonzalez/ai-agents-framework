{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Frontmatter Schema",
  "description": "JSON Schema for validating skill frontmatter in SKILL.md files. Reference only - not enforced by CLI (validation uses skill-parser.ts).",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "Skill identifier (lowercase with hyphens only)"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "pattern": ".*Trigger:.*",
      "description": "Precise description including 'Trigger:' clause for when AI should invoke"
    },
    "license": {
      "type": "string",
      "description": "Optional: License info (e.g., Apache 2.0, MIT)"
    },
    "metadata": {
      "type": "object",
      "required": ["version"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$",
          "description": "Semantic version (X.Y or X.Y.Z). Start at 1.0 for new skills."
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
          },
          "uniqueItems": true,
          "description": "Optional: Internal skill dependencies"
        },
        "allowed-tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Optional: Specific tools needed by this skill. Omit for generic skills."
        },
        "dependencies": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9@/-]+$": {
              "type": "string",
              "pattern": "^(\\^|~|>=|>|<|<=|\\*|[0-9]+(\\.[0-9]+){0,2})",
              "description": "Version range (e.g., ^1.0.0, >=1.0, ~2.3.4)"
            }
          },
          "additionalProperties": false,
          "description": "Optional: External libraries with version ranges"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
